<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:orientation="vertical" >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="39dp"
            android:background="@color/yellow"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Choose a bike"
                android:id="@+id/chooseBikeHeading"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"/>

            <Spinner
                android:id="@+id/bikes_spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/chooseBikeHeading"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="39dp"
            android:background="@color/yellow"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Choose a Location"
                android:id="@+id/chooselocationHeading"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"/>


            <RadioGroup
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/lat_lng_radiogroup"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/chooselocationHeading" >



                <RadioButton
                    android:id="@+id/radioInputLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/latitude"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="15dp"
                    android:text="Input a location"
                    android:textColor="@color/black"
                    />


                <RadioButton
                    android:id="@+id/radioCurrentLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/radioButton2"
                    android:layout_alignParentLeft="true"
                    android:text="Use Current Location"
                    android:textColor="@color/black"
                    />
            </RadioGroup>

        </RelativeLayout>


        <GridLayout
            android:id="@+id/lat_lng_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="39dp"
            android:columnCount="2"
            android:rowCount="2"
            android:background="@color/yellow"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp">

            <TextView
                android:id="@+id/latitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latitude"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/latitudeInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="@color/black" />



            <TextView
                android:id="@+id/longitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Longitude"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black" />





            <EditText
                android:id="@+id/longitudeInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:ems="10"
                android:textColor="@color/black" />

        </GridLayout>

        <Button
            android:id="@+id/button_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register Stolen"
            android:enabled="true"
            android:layout_gravity="center"
            android:layout_marginTop="39dp"

            />

    </LinearLayout>
</ScrollView>